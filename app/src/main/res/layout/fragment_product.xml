<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Product_List.ProductFragment">


    <!-- Product Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="start">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="หมวดหมู่สินค้า"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bag"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flip Flops"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sneakers"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moccasins"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Tops Sneaker"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoodie"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Runner Shoes"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="สินค้า"
            android:textSize="25dp"
            android:textStyle="bold"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/abibas"
                android:layout_width="110dp"
                android:layout_height="114dp"
                android:src="@drawable/abidas" />
            <TextView
                android:id="@+id/product_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abidas"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/product_price_discounted4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btn_add_to_cart4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>